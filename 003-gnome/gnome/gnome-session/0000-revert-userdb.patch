+    export LC_TIME=$REGION
+    # LC_COLLATE
+    export LC_MONETARY=$REGION
+    # LC_MESSAGES
+    export LC_PAPER=$REGION
+    # LC_NAME
+    export LC_ADDRESS=$REGION
+    export LC_TELEPHONE=$REGION
+    export LC_MEASUREMENT=$REGION
+    # LC_IDENTIFICATION
+  fi
+fi
+
+exec @libexecdir@/gnome-session-binary "$@"
