#!/bin/bash

source "$BUILDERUTILSPATH/latestfromgithub.sh"

PRGNAM=libheif

CWD=$(dirname "$0")
TMP=$MODULEPATH/$PRGNAM
PKG=$TMP/package-$PRGNAM

set -e

[ -e $TMP ] && rm -rf $TMP
mkdir -p $TMP $PKG
cd $TMP

info=$(DownloadLatestFromGithub "strukturag" ${PRGNAM})
VERSION=${info#* }

tar xvf $PRGNAM-${VERSION}.tar.?z*
cd $PRGNAM-${VERSION}

cmake -B build -S $TMP/$PRGNAM-$VERSION \
	-DCMAKE_C_FLAGS:STRING="$GCCFLAGS" \
	-DCMAKE_CXX_FLAGS:STRING="$GCCFLAGS -ffat-lto-objects" \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_INSTALL_LIBDIR=/usr/lib${SYSTEMBITS} \
	-DCMAKE_INSTALL_MANDIR=/usr/man \
	-DBUILD_TESTING=OFF \
	-DWITH_DAV1D=ON \
	-DWITH_AOM_DECODER=OFF \
	-DCMAKE_BUILD_TYPE=Release

make -C build -j${NUMBERTHREADS} DESTDIR="$PKG" install

find $PKG -type f -name "*.la" -exec rm -f {} \;

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
makepkg ${MAKEPKGFLAGS} $MODULEPATH/packages/${PRGNAM}-$VERSION-$ARCH-1.txz