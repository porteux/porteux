#!/bin/sh

PRGNAM=cosmic-osd

CWD=$(dirname "$0")
TMP=$MODULEPATH/$PRGNAM
PKG=$TMP/package

set -e

[ -e $TMP ] && rm -rf $TMP
mkdir -p $TMP $PKG
cd $TMP

git clone https://github.com/pop-os/$PRGNAM
cd $PRGNAM
VERSION=$(git log -1 --date=format:"%Y%m%d" --format="%ad")

export RUSTFLAGS="-Cpanic=abort -Cstrip=debuginfo -Copt-level=z -Clto=true -Cembed-bitcode=yes -Zdylib-lto -Ccodegen-units=1 -Zlocation-detail=none"

ls rust-toolchain* 1> /dev/null 2>&1 && rm rust-toolchain*
sed -i "s|prefix ?= /usr/local|prefix ?= /usr|g" Makefile
make -j${NUMBERTHREADS}
make install DESTDIR=$MODULEPATH/$PRGNAM/package || exit 1

cd $MODULEPATH/$PRGNAM/package
makepkg ${MAKEPKGFLAGS} $MODULEPATH/packages/$PRGNAM-$VERSION-${ARCH}-1.txz
