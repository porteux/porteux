+static char* get_gnome_shell_version() {
+   FILE *file_pointer = popen("gnome-shell --version | cut -d \" \" -f 3", "r");
+   if (file_pointer == NULL)
+       return "Not Available";
+
+   char *version = NULL;
+   size_t len = 0;
+   ssize_t read;
+
+   char *result = NULL;
+
+   if ((read = getline(&version, &len, file_pointer)) != -1) {
+       if (version[read - 1] == '\n')
+           version[read - 1] = '\0';
+
+       result = strdup(version);
+   } else {
+       result = "Not Available";
+   }
+
+   free(version);
+   pclose(file_pointer);
+
+   return result;
+}
