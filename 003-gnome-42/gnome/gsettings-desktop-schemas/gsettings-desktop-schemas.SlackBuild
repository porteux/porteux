#!/bin/bash

PRGNAM=gsettings-desktop-schemas

CWD=$(dirname "$0")
TMP=$MODULEPATH/$PRGNAM
PKG=$TMP/package-$PRGNAM

set -e

[ -e $TMP ] && rm -rf $TMP
mkdir -p $TMP $PKG
cd $TMP

wget -nd -r -l1 --no-parent -A "${PRGNAM}*.tar.xz"  https://download.gnome.org/core/${GNOME_LATEST_MAJOR_VERSION}/${GNOME_LATEST_VERSION}/sources/
VERSION=${VERSION:-$(find . -maxdepth 1 -name "$PRGNAM-*.tar.?z*" | rev | cut -f 3- -d . | cut -f 1 -d - | rev)}

tar xfv $PRGNAM-$VERSION.tar.?z*
cd $PRGNAM-$VERSION

# Don't override font defaults with fonts that we don't have:
zcat $CWD/gsettings-desktop-schemas.font.defaults.diff.gz | patch -p1 --verbose

mkdir build && cd build
CFLAGS="$GCCFLAGS -flto=auto" \
meson setup \
  --prefix=/usr \
  --libdir=/usr/lib${SYSTEMBITS} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man

DESTDIR=$PKG ninja -j${NUMBERTHREADS} install

find $PKG -type f -name "*.la" -exec rm -f {} \;

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
makepkg ${MAKEPKGFLAGS} $MODULEPATH/packages/${PRGNAM}-$VERSION-$ARCH-1.txz
